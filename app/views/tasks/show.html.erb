<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>
<%# put in controller %>
  <% if @task.completed == false %>
    <% response =  'This task has not been completed yet.' %>
  <% else%>
    <% response = 'This task is complete!'%>
  <%end%>
  <%=response%>
</p>

<%= link_to 'Edit this task', task_edit_path(@task) %>
<%= link_to 'Delete this task', task_path(@task),method: :delete, data: { confirm: "Are you sure?" } %>



<%= link_to 'Back to My Tasks', tasks_path %>
